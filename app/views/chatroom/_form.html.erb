<%= form_with model: @message, url: chatroom_path, local: false, id: "chatroom-form" do |form| %>

  <div class="row">
    <div class="col-md-10">
      <div class="my-2">
        <%= form.text_field :body, autofocus: true, class: "form-control", id: "exampleFormControlInput1", placeholder: "Type message ..." %>
      </div>
    </div>

    <div class="col-md-2">
      <div class="d-grid gap-2 my-2">
        <%= form.submit "Send", class: "btn btn-success", id: "send-btn" %>
      </div>
    </div>
  </div>

<% end %>

